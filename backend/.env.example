# Server Configuration
PORT=5000
NODE_ENV=development
DEBUG=false

# Database Configuration
DB_PATH=./database/inventory.db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production_min_32_chars
JWT_EXPIRE=24h

# Clover Configuration
CLOVER_APP_ID=your_clover_app_id
CLOVER_APP_SECRET=your_clover_app_secret
CLOVER_API_URL=https://api.clover.com
CLOVER_SANDBOX_URL=https://sandbox.clover.com
CLOVER_ENVIRONMENT=sandbox

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# API Rate Limiting (future enhancement)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (future enhancement)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Logging
LOG_LEVEL=info
