{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend - Debug",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/server.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development",
        "PORT": "5000"
      },
      "cwd": "${workspaceFolder}/backend"
    },
    {
      "name": "Init Database",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/database/init-database.js",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend"
    }
  ],
  "compounds": [
    {
      "name": "Backend + Frontend",
      "configurations": ["Backend - Debug"],
      "stopAll": true
    }
  ]
}
